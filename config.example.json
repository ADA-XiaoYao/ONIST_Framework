{
  "framework": {
    "version": "1.0.0",
    "threads": 100,
    "timeout": 300,
    "output_dir": "./output",
    "verbose": true
  },
  
  "reconnaissance": {
    "passive": true,
    "active": true,
    "dns_brute": true,
    "port_scan": true,
    "web_crawl": true,
    "screenshot": false
  },
  
  "vulnerability_scan": {
    "enabled": true,
    "severity": ["critical", "high", "medium"],
    "databases": ["cve", "cwe", "exploitdb", "nuclei"],
    "web_vulns": {
      "xss": true,
      "sqli": true,
      "ssrf": true,
      "xxe": true,
      "ssti": true,
      "rce": true,
      "lfi": true,
      "idor": true,
      "csrf": true
    }
  },
  
  "exploitation": {
    "auto_exploit": false,
    "metasploit": true,
    "payload_type": "reverse_shell",
    "lhost": "10.0.0.1",
    "lport": 4444,
    "evasion": true
  },
  
  "osint": {
    "subdomain_sources": 30,
    "email_harvesting": true,
    "social_media": true,
    "employee_intel": true,
    "github_scanning": true,
    "breach_checking": true,
    "dark_web": false
  },
  
  "api_keys": {
    "shodan": "${SHODAN_API_KEY}",
    "virustotal": "${VIRUSTOTAL_API_KEY}",
    "censys_id": "${CENSYS_API_ID}",
    "censys_secret": "${CENSYS_API_SECRET}",
    "securitytrails": "${SECURITYTRAILS_API_KEY}",
    "hunter": "${HUNTER_API_KEY}",
    "github": "${GITHUB_TOKEN}",
    "binaryedge": "${BINARYEDGE_API_KEY}",
    "zoomeye": "${ZOOMEYE_API_KEY}"
  },
  
  "databases": {
    "cve_db": "./databases/cve.db",
    "cwe_db": "./databases/cwe.db",
    "exploitdb": "./databases/exploitdb.db",
    "custom_db": "./databases/custom.db",
    "ghdb": "./databases/ghdb.db"
  },
  
  "wordlists": {
    "dns": "./wordlists/dns-top1m.txt",
    "directories": "./wordlists/common.txt",
    "resolvers": "./wordlists/resolvers.txt"
  },
  
  "reporting": {
    "formats": ["json", "html", "markdown", "xml"],
    "include_screenshots": true,
    "include_raw_data": false,
    "severity_threshold": "medium"
  },
  
  "performance": {
    "rate_limit": {
      "enabled": true,
      "requests_per_second": 10
    },
    "retry": {
      "max_attempts": 3,
      "backoff_factor": 2
    },
    "cache": {
      "enabled": true,
      "ttl": 3600
    }
  },
  
  "stealth": {
    "random_user_agent": true,
    "proxy": null,
    "delay_between_requests": 0,
    "evade_waf": false
  }
}

